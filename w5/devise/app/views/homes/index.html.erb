<p id="notice"><%= notice %></p>

<h1>Homes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
      <tr>
        <td><%= home.title %></td>
        <td><%= home.content %></td>
        <td><%= link_to 'Show', home %></td>
        <td><%= link_to 'Edit', edit_home_path(home) %></td>
        <td><%= link_to 'Destroy', home, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Home', new_home_path %>
<!-- current_user.nil? 도 같은 표현-->
<% if user_signed_in? %>
  <%= link_to 'Sign out', destroy_user_session_path, method: 'delete' %>
<% else %>
  <%= link_to '로그인', new_user_session_path %>
  <%= link_to '회원가입', new_user_registration_path %>
<% end %>